<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2.60dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="message"
        android:fontFamily="@font/tt_norms_std_condensed_normal"
        android:background="@drawable/bg_send_message"
        android:paddingStart="13.00dp"
        android:paddingVertical="7.80dp"
        android:paddingEnd="7.80dp"
        android:textColor="@color/dark_black"
        android:textSize="16.90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="05:45 PM"
        android:textColor="@color/secondary_text"
        android:textSize="9.10sp"
        android:layout_marginTop="2.60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>